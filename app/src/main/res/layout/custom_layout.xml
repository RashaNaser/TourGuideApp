<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/customImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:contentDescription="IMAGE"
                android:scaleType="fitXY"
                tools:ignore="HardcodedText"
                tools:srcCompat="@drawable/almathaf_hotel" />

            <TextView
                android:id="@+id/customName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/padding"
                android:text="@string/almathaf"
                android:textSize="@dimen/heading_textSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding"
                android:padding="@dimen/padding"
                android:text="@string/almathaf_location"
                android:textSize="@dimen/minor_textSize"
                app:drawableStartCompat="@drawable/ic_location" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>